{% extends 'base.html.twig' %}
{# app/Resources/views/default/newProduct.html.twig #}

{% block body_id 'new_product' %}
{% block main %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

<div class="page-header text-center">
  <h1>Add a new product <small>SwapApp</small></h1>
</div>

<div class="row">
  <div class="col-xs-1 col-sm-2 col-md-3 col-lg-3"></div>
  <div class="col-xs-10 col-sm-8 col-md-6 col-lg-6">        
        {{ form_start(form) }}
        {#{{ form_widget(form) }}#}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.productCondition) }}
        {{ form_row(form.imageFile) }}
        {{ form_row(form.productLocation) }}
        {{ form_row(form.productTaxonomy) }}        
        {{ form_end(form) }}
  </div>
  <!-- Optional: clear the XS cols if their content doesn't match in height -->
  <div class="clearfix visible-xs-block"></div>
  <div class="col-xs-1 col-sm-2 col-md-3 col-lg-3"></div>
</div>
{% endblock %}
{#{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}#}



{% block javascripts %}
    {{ parent() }}
    {% javascripts 
        'js/Product/product_form.js'
    %}
    <script src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

